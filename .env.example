# Environment Configuration
NODE_ENV=development

# Client Configuration
CLIENT_URL=http://localhost:3000

# JWT Secrets (generate your own secure secrets)
JWT_SECRET_EMAIL=your_jwt_email_secret_here
JWT_SECRET_PASSWORD=your_jwt_password_secret_here
JWT_SECRET_ACCESS=your_jwt_access_secret_here
JWT_SECRET_REFRESH=your_jwt_refresh_secret_here

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
MAILING_SERVICE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
MAILING_SERVICE_CLIENT_SECRET=your_google_client_secret_here
MAILING_SERVICE_REFRESH_TOKEN=your_google_refresh_token_here

# Email Configuration
SENDER_EMAIL_ADDRESS=your_email@example.com

# Internal Service Configuration
INTERNAL_SERVICE_SECRET=your_internal_service_secret_here

# Microservice URLs
MARKET_SERVER_URL=http://localhost:5000
AUTH_SERVER_URL=http://localhost:4000
CALC_SERVER_URL=http://localhost:8000
API_SERVER_URL=http://localhost:3004

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
DISABLE_REDIS_QUEUES=false

# Worker Configuration
PENDING_ORDER_WORKER_CONCURRENCY=5
EMAIL_WORKER_CONCURRENCY=10

# Rate Limiting
RATE_LIMIT_REQUESTS=100